#!/bin/bash

# Get the current branch name
current_branch=$(git rev-parse --abbrev-ref HEAD)

# Log the branch name to a file
echo "Pushing changes to branch: $current_branch" >> .git/hooks/post-commit.log

# Automatically push changes to the current branch
git push origin "$current_branch"

# Log the success or failure of the push operation
if [ $? -eq 0 ]; then
  echo "Successfully pushed changes to $current_branch" >> .git/hooks/post-commit.log
else
  echo "Failed to push changes to $current_branch" >> .git/hooks/post-commit.log
fi