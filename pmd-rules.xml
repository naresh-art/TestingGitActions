<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Custom Apex PMD Ruleset"
         xmlns="http://pmd.sf.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/2.0.0 https://pmd.sf.net/ruleset_2_0_0.xsd"
         xsi:noNamespaceSchemaLocation="https://pmd.sf.net/ruleset_2_0_0.xsd">

    <description>
        Custom PMD Rules for Apex code quality.
    </description>

    <!-- Example Rules -->
    <!-- Avoid global modifier -->
    <rule ref="category/apex/design.xml/AvoidGlobalModifier" />

    <!-- Avoid SOQL in loops -->
    <rule ref="category/apex/performance.xml/AvoidSoqlInLoops" />

    <!-- Ensure unit test classes have asserts -->
    <rule ref="category/apex/errorprone.xml/ApexUnitTestClassShouldHaveAsserts" />

    <!-- Avoid System.debug statements (newly added rule) -->
    <rule ref="category/apex/codestyle.xml/SystemDebugRule" />
</ruleset>